#include<stdio.h>
int main()
{
	double a[100],avg=0;
	double max,min;
	int n,i;
	printf("请输入得分个数：");
	scanf("%d",&n);
	printf("请输入得分："); 
	for(i=0;i<n;i++)  
	scanf("%lf",&a[i]);
	min=max=a[0];
	avg=a[0];
	for(i=1;i<n;i++)
	{
		avg=avg+a[i];
		if(a[i]>max)
		max=a[i];
		if(a[i]<min)
		min=a[i];
	}
	avg=avg-max-min;
	avg=avg/(n-2);
	printf("平均值为%lf",avg);
	return 0;
}
