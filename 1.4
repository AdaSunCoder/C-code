//选择排序从大到小
#include<stdio.h>
#define N 6
int main()
{
	int a[N];
	int i;
	for (i = 0;i < N;i++)
	{
		a[i] = rand() % 100;
		printf("%d ", a[i]);
	}
	int j;
	int t;
	for(i=0;i<N-1;i++)
		for (j = i + 1;j < N;j++)
		{
			if (a[i] < a[j])
			{
				t = a[i];
				a[i] = a[j];
				a[j] = t;
			}
		}
	printf("排序之后：");
	for (i = 0;i < N;i++)
		printf("%d ", a[i]);
	return 0;
}
